<?xml version="1.0" encoding="utf-8"?><!--最新栏目的新闻-->
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.bilibili.magicasakura.widgets.TintAppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/Widget.App.Toolbar"
        app:layout_collapseMode="pin"
        android:fitsSystemWindows="true"
        android:background="@color/theme_color_primary">
        <com.bilibili.magicasakura.widgets.TintToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            style="@style/Widget.App.Toolbar"
            android:fitsSystemWindows="true"
            android:background="@color/theme_color_primary" />
        </com.bilibili.magicasakura.widgets.TintAppBarLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="常规"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:id="@+id/line1"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="显示通知"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="接收关于图片更新的通知"
                    android:textSize="10dp"
                    android:layout_below="@+id/text"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/gray" />
                <com.bilibili.magicasakura.widgets.TintSwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/line2"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择语言"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="跟随系统"
                    android:textSize="10dp"
                    android:layout_below="@+id/text2"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/gray" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/line3"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="清理缓存"
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="遇到问题可以尝试清理缓存"
                    android:textSize="10dp"
                    android:layout_below="@+id/text3"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/gray" />
            </RelativeLayout>
            <com.bilibili.magicasakura.widgets.TintView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#ccc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="推荐给好友"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/black"
                android:gravity="left|center" />
       <!-- <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="联系作者"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/black"
                android:gravity="left|center" />-->
        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="检查更新"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/black"
            android:gravity="left|center" />
        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="关于"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/black"
            android:gravity="left|center" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>